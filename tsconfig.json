{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "typeRoots" : ["./node_modules/@types"],
    "paths": {
      "*": [
        "node_modules/*"
      ]
    }
  },
  "include": ["server/**/*"]
}
